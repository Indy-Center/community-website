{
	"name": "website",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run db:migrate:local && vite dev",
		"build": "vite build",
		"preview": "npm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"populate-analytics": "node scripts/populate-analytics.js",
		"db:migrate": "npx wrangler d1 migrations apply website-db --remote",
		"db:migrate:local": "npx wrangler d1 migrations apply website-db --local",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"deploy": "npx wrangler d1 migrations apply website-db --remote && npx wrangler deploy",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
	},
	"devDependencies": {
		"@date-fns/tz": "^1.4.1",
		"@date-fns/utc": "^2.1.1",
		"@iconify/json": "^2.2.379",
		"@libsql/client": "^0.15.14",
		"@sentry/cloudflare": "^10.12.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.31.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^24.3.0",
		"arctic": "^3.7.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.27.1",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"ulid": "^3.0.1",
		"unplugin-icons": "^22.2.0",
		"vite": "^7.0.4",
		"winston": "^3.17.0",
		"wrangler": "^4.33.1",
		"zod": "4.0.10"
	},
	"dependencies": {
		"@sentry/sveltekit": "^10.12.0",
		"date-fns": "^4.1.0"
	}
}
