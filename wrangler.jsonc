/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "website",
	"main": ".svelte-kit/cloudflare/_worker.js",
	"compatibility_date": "2025-08-30",
	"compatibility_flags": ["nodejs_als"],
	"assets": {
		"binding": "ASSETS",
		"directory": ".svelte-kit/cloudflare"
	},
	"vars": {
		"CONNECT_BASE_URL": "https://auth.vatsim.net",
		"CONNECT_CALLBACK_URL": "https://new.flyindycenter.com/login/connect/callback",
		"CONNECT_CLIENT_ID": 1653
	},
	"routes": [
		{
			"custom_domain": true,
			"pattern": "new.flyindycenter.com"
		}
	],
	"observability": {
		"enabled": true
	},
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "website-db",
			"database_id": "fea99a92-69e3-423a-95c1-44c232c81c67",
			"migrations_dir": "./drizzle/migrations"
		}
	]
}
